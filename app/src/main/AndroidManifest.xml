<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nedashkovskiy.randomuserviewer">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/user_icon_main"
        android:label="@string/app_name"
        android:roundIcon="@drawable/user_icon_main"
        android:supportsRtl="true"
        android:theme="@style/Theme.RandomUserViewer">

        <activity android:name=".ui.activities.MainActivity" android:screenOrientation="sensorLandscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>